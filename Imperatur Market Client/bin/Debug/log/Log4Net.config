<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="RollingLogFileAppenderOutput" type="log4net.Appender.RollingFileAppender">
    <!--<file value="%envFolderPath{CommonApplicationData}\\imp_" />-->
    <!--<file value="c:\\temp\\implog_" />-->
    <file type="log4net.Util.PatternString" value="%property{LogFileName}.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd'.log'" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="RollingLogFileAppenderOutput" />
  </root>
</log4net>